<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/orange</item>
        <item name="android:navigationBarColor">@color/orange</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="MainBottomNavigation">
        <item name="fontFamily">@font/inter</item>
    </style>

    <style name="SearchTheme" parent="Theme.Library">
        <item name="android:statusBarColor">?attr/colorSecondaryVariant</item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="textParam">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/setting_background</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">64dp</item>
    </style>
</resources>